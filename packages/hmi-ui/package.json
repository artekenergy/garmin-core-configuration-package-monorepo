{
  "name": "@gcg/hmi-ui",
  "version": "0.1.0",
  "description": "Embedded UI renderer for Garmin HMI devices",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy:web": "./scripts/deploy-to-web.sh",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "@gcg/schema": "workspace:*",
    "@preact/signals": "^1.2.2",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.7.0",
    "@testing-library/preact": "^3.2.3",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "jsdom": "^23.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
