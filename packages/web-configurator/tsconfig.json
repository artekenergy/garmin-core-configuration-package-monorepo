{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@gcg/schema": ["../schema/src"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*_OLD.tsx"],
  "references": [{ "path": "../schema" }]
}
